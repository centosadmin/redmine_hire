<% refusal_url = HhResponse.find_by(hh_id: @issue.hh_response_id)&.refusal_url %>

<% if refusal_url.present? %>
  <%= link_to 'Отказать', "/issues/#{@issue.id}/refusal_response", method: :post, id: 'hh_refusal_link', style: 'display: none;', class: 'icon icon-close' %>

  <script>
      $(document).ready(function() {
          button = $('#hh_refusal_link').detach()
          button.css('display', 'inline-block')
          $('div#content>div.contextual').append(button)
      })
  </script>
<% end %>

